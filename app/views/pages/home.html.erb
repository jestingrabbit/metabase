<script type="text/template" id="makeCurrentUserTemplate">
  <div id="signup" class="side-form col-xs-3 col-xs-offset-2">

    <h1 class="text-center form-heading">New User</h1>

    <form class="new_user">
      <div class="top-message"><small>All fields are required.</small></div>
      <fieldset class="name">
        <label>Username</label>
        <input required="required" class="form-control" type="text">
        <div class="message"></div>
      </fieldset>
      <fieldset class="email">
        <label>Email</label>
        <input required="required" class="form-control" type="email">
        <div class="message"></div>
      </fieldset>
      <fieldset class="password">
        <label>Password</label>
        <input required="required" class="form-control" type="password">
        <div class="message"></div>
      </fieldset>
      <fieldset class="password_confirmation">
        <label>Password confirmation</label>
        <input required="required" class="form-control" type="password">
        <div class="message"></div>
      </fieldset>
      <div class="btn-wrapper">
        <input type="button" value="Sign Up" class="btn btn-primary btn-lg" id="signUpButton">
      </div>
    </form>
  </div>
  <div id="or" class="col-xs-2"><h1>or</h1></div>
  <div id="login" class="side-form col-xs-3">
    <h1 class="text-center form-heading">Returning</h1>
    <form class="returning">
      <div class="top-message"></div>
      <fieldset class="identifier">
        <label>Username or Email</label>
        <input required="required" class="form-control" type="text">
      </fieldset>
      <fieldset class="password">
        <label>Password</label>
        <input required="required" class="form-control" type="password">
      </fieldset>
      <div class="btn-wrapper">
        <input type="button" value="Login" class="btn btn-primary btn-lg" id="loginButton">
      </div>
    </form>
  </div>
</script>

